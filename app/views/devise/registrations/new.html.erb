<div class='container mt-3'>
   <div class='row'>
      <div class='col-md-4 col-md-offset-4'>
         <div class="text-center">
            <% if params[:plan] == '2' %>
              <h2>Pro Account <br/>Sign Up Form</h2>
              <p>Sign up for the pro account for $10/ month</p>
            <% else %>
             <h2>Basic Account <br/>Sign Up Form</h2>
             <p>Sign up for free and get basic access to the community.</p>
            <% end %>
         </div>
         <div class="well">
            <% if params[:plan]== '2' %>
               <%= render "pro_form" %>
            <% else %>
               <%= render "basic_form" %>
            <% end %>
         </div>
            <%= render "devise/shared/links" %>
         </div>
      </div>
   </div>
